<div class="form-centralize">
  <div class="form-borders">
    <link
    rel="stylesheet"
    href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.0.2/mapbox-gl-directions.css"
    type="text/css"
    />
    <h2>Create a track</h2>
    <%= simple_form_for (@track)  do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :level, collection: (1..5) %>
      <%= f.input :distance, hint:'in km' %>
      <div class="map-with-button">
        <div class="track-map col-8">
          <div id="map"
            style="width: 100%; height: 100%;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
      <%= f.input :start_address %>
      <%= f.input :end_address %>
      <%= f.input :date %>
      <%= f.input :time_to_start %>
      <%= f.input :time_to_complete %>
      <%= f.input :photo, as: :file, hint: 'if you not pick a photo, it will be random generated for you' %>
      <%= f.submit "Create this Race", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
